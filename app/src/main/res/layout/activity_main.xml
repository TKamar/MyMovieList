<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/TXT_MOVIES_TITLE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="My Movies"
        android:textColor="@color/black"
        android:textSize="22dp"

        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RECYCLE_MOVIE_LIST"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_below="@id/TXT_MOVIES_TITLE"
        android:layout_marginBottom="20dp"
        />

    <TextView
        android:id="@+id/TXT_TOP_MOVIES_TITLE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Top Movies"
        android:textSize="18dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textColor="@color/black"
        android:layout_below="@id/RECYCLE_MOVIE_LIST"
        android:gravity="center"
        />

    <Button
        android:id="@+id/BTN_TOP_MOVIES"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_below="@id/TXT_TOP_MOVIES_TITLE"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        />

</RelativeLayout>